<%_ let inputName = dtoMapstruct ? restInstance : persistInstance; _%>
<%_ if (dtoMapstruct) { _%>
        <%- persistClass %> <%- persistInstance %> = <%- entityInstance %>Mapper.toEntity(<%- restInstance %>);
<%_ } _%>
<%_ if (enableAuditHistory) { _%>
    AuditHistory auditHistory = new AuditHistory();
<%_ } _%>
<%_
var isService;
let hasCreatedBy = false;
let hasUpdatedBy = false;
for (const relationship of relationships) {
    if (relationship.relationshipFieldName === 'createdBy') {
        hasCreatedBy = true;
    }
    if (relationship.relationshipFieldName === 'updatedBy') {
        hasUpdatedBy = true;
    }
}
_%>
<%_ if ((enableAuditHistory || hasCreatedBy) && saveNewEntityOperation && isService) { _%>
        Optional<String> usernameOptional = SecurityUtils.getCurrentUserLogin();
        if (usernameOptional.isPresent()) {
            String username = usernameOptional.get();
            Optional<User> userOptional = userRepository.findOneByLogin(username);
            if (userOptional.isPresent()) {
                User user = userOptional.get();
    <%_ if (hasCreatedBy) { _%>
                <%- persistInstance %>.setCreatedBy(user);
    <%_ } _%>
    <%_ if (enableAuditHistory) { _%>
        auditHistory.setChangeByUserId(user.getId());
    <%_ } _%>
            }
        }
<%_ } else if ((enableAuditHistory || hasUpdatedBy) && !saveNewEntityOperation && isService) { _%>
        Optional<String> usernameOptional = SecurityUtils.getCurrentUserLogin();
        if (usernameOptional.isPresent()) {
            String username = usernameOptional.get();
            Optional<User> userOptional = userRepository.findOneByLogin(username);
            if (userOptional.isPresent()) {
                User user = userOptional.get();
    <%_ if (hasUpdatedBy) { _%>
                <%- persistInstance %>.setUpdatedBy(user);
    <%_ } _%>
    <%_ if (enableAuditHistory) { _%>
                auditHistory.setChangeByUserId(user.getId());
    <%_ } _%>    
            }
        }
<%_ } _%>
<%_ if (!saveNewEntityOperation && requiresPersistableImplementation) { _%>
        <%- persistInstance %>.setIsPersisted();
<%_ } _%>
<%_ if (saveNewEntityOperation && isUsingMapsId) { _%>
        <%- mapsIdAssoc.otherEntity.primaryKey.type %> <%- mapsIdAssoc.otherEntityName %>Id = <%- persistInstance %>.get<%- mapsIdAssoc.relationshipNameCapitalized %>().get<%- mapsIdAssoc.otherEntity.primaryKey.nameCapitalized %>();
        <%- mapsIdAssoc.otherEntity.entityInstance %>Repository.findById(<%- mapsIdAssoc.otherEntityName %>Id).ifPresent(<%- persistInstance %>::<%_ if (!fluentMethods) { _%>set<%- mapsIdAssoc.relationshipNameCapitalized %> <%_ } else { _%><%- mapsIdAssoc.relationshipName %><%_ } _%>);
<%_ } _%>
<%_ if (enableAuditHistory && isService) { _%>
        auditHistory.setChangeAtTime(ZonedDateTime.now());
        try {
            auditHistory.setChangeContent(objectMapper.writeValueAsString(<%= inputName %>));
        } catch (Exception e) {
            log.error("Error while converting <%= inputName %> to json", e);
            auditHistory.setChangeContent(<%= inputName %>.toString());
        }
        auditHistory.setEntityId(<%= persistInstance %>.getId());
        auditHistory.setEntityName(<%= persistInstance %>.getClass().getSimpleName());
        auditHistoryRepository.save(auditHistory);
<%_ } _%>
        <%- returnDirectly && !searchEngineElasticsearch && !dtoMapstruct ? 'return' : `${persistInstance} =` %> <%- entityInstance %>Repository.save(<%- persistInstance %>);
<%_ if (searchEngineElasticsearch) { _%>
        <%- entityInstance %>SearchRepository.index(<%- persistInstance %>);
<%_ } _%>
<%_ if (dtoMapstruct) { _%>
        <%- returnDirectly ? 'return' : `${dtoInstance} =` %> <%- entityInstance %>Mapper.toDto(<%- persistInstance %>);
<%_ } else if (returnDirectly && searchEngineElasticsearch) { _%>
        return <%- entityInstance %>;
<%_ } _%>
